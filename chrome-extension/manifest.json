{
  "manifest_version": 3,
  "name": "QAtalyst - AI Test Case Generator",
  "version": "10.0.1",
  "description": "AI-powered Jira assistant for intelligent test case generation.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://*.atlassian.net/*",
    "https://*.jira.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*",
    "https://api.figma.com/*",
    "https://docs.googleapis.com/*",
    "https://*.confluence.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/browse/*",
        "https://*.jira.com/browse/*"
      ],
      "js": ["config.js", "security.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://*.atlassian.net/*", "https://*.jira.com/*"]
    }
  ]
}
